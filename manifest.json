{
  "manifest_version": 3,
  "name": "Greenhouse Security Code Helper",
  "version": "1.0.0",
  "description": "Shows Greenhouse security codes from Gmail with one-click copy.",
  "permissions": [
    "identity",
    "storage",
    "notifications",
    "clipboardWrite",
    "scripting",
    "offscreen",
    "alarms"
  ],
  "optional_permissions": ["<all_urls>"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.readonly"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html"
  }
}
